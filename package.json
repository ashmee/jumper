{
    "name": "jumper-phaser-ts",
    "version": "1.0.0",
    "description": "A template project for Phaser 3 using Parceljs",
    "scripts": {
        "start": "parcel src/index.html -p 8000",
        "build": "parcel build src/index.html --no-source-maps --public-url ./ --out-dir docs",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
        "prettier": "prettier --write ."
    },
    "author": "ashmee",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "babel-eslint": "^10.1.0",
        "cssnano": "^4.1.10",
        "eslint": "^7.21.0",
        "minimist": ">=1.2.5",
        "parcel-plugin-clean-easy": "^1.0.2",
        "parcel-plugin-static-files-copy": "^2.5.1",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "phaser": "^3.52.0"
    },
    "parcelCleanPaths": [
        "dist","docs"
    ],
    "staticFiles": {
        "staticPath": "src/assets",
        "watcherGlob": "**"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ashmee/jumper.git"
    },
    "bugs": {
        "url": "https://github.com/ashmee/jumper/issues"
    },
    "homepage": "https://github.com/ashmee/jumper#readme"
}
